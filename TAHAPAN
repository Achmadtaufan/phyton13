SELECT 
POLICY_NUMBER=LEFT(CHDRNUM,8),
TAHAPAN_PRINCIPAL=CASE WHEN (SACSCODE+SACSTYP)='LNEO' THEN SUM(CURRENT_SUSPEND_AMOUNT) END,
TAHAPAN_INTEREST=CASE WHEN (SACSCODE+SACSTYP)='LNEI' THEN SUM(CURRENT_SUSPEND_AMOUNT) END,
APL_PRINCIPAL=CASE WHEN (SACSCODE+SACSTYP)='LNAO' THEN SUM(CURRENT_SUSPEND_AMOUNT) END,
APL_INTEREST=CASE WHEN (SACSCODE+SACSTYP)='LNAI' THEN SUM(CURRENT_SUSPEND_AMOUNT) END,
POLICY_LOAN_PRINCIPAL=CASE WHEN (SACSCODE+SACSTYP)='LNLO' THEN SUM(CURRENT_SUSPEND_AMOUNT) END,
POLICY_LOAN_INTEREST=CASE WHEN (SACSCODE+SACSTYP)='LNLI' THEN SUM(CURRENT_SUSPEND_AMOUNT) END

FROM DBREPORT..TEMP_TABLE_SUSPEND_BENEFIT_DEV_ACT 
WHERE LEFT(CHDRNUM,8)='C0050908'
GROUP BY LEFT(CHDRNUM,8),(SACSCODE+SACSTYP)
